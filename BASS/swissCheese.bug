model{
  for(i in 1:n){   ## regression model for y
    mu[i] <- beta[1] + beta[2]*x[i]
    y[i] ~ dnorm(mu[i],tau)
  }
  ## priors
  beta ~ dmnorm(b0,B0)
  sigma ~ dunif(0,100)
  tau <- pow(sigma,-2)

  ## priors for missing x
  for(i in 1:n){
  	x[i] ~ dnorm(mux,taux)
  }
  mux ~ dnorm(0,.0001)
  sigmax ~ dunif(0,200)
  taux <- pow(sigmax,-2)	 
}

## an alternative method might be to put priors on the missing x themselves
## e.g., 
## x[2] ~ dunif(-50,100) 
